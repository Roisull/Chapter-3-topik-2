<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="30dp"
    tools:context=".StartActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity Start"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/et_input_data_satu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/black"
        android:hint="Masukkan data satu"/>

    <EditText
        android:id="@+id/et_input_data_dua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Masukkan data dua"/>

    <Button
        android:id="@+id/btn_pass_with_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Passing data dengan Intent"/>

    <Button
        android:id="@+id/btn_pass_with_bundle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="passing data dengan bundle"/>

    <Button
        android:id="@+id/btn_pass_with_serializable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="passing data dengan serializable"/>

    <Button
        android:id="@+id/btn_open_galeri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="buka galeri"/>

    <Button
        android:id="@+id/btn_open_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="open camera"/>

    <Button
        android:id="@+id/btn_open_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open web"/>

    <Button
        android:id="@+id/btn_parcelable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="parcelable"/>

</LinearLayout>